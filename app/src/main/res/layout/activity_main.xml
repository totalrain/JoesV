<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.Joes.joesv01.app.MainActivity">

    <!--  android:visibility="gone"-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/teaListView"
                android:background="@color/abc_search_url_text_normal"
                android:clickable="true"
                android:divider="@drawable/abc_ab_bottom_transparent_light_holo"
                android:textAlignment="center"
                android:stackFromBottom="false"
                android:paddingLeft="@dimen/abc_action_bar_default_height"
                android:scrollingCache="false"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffcf15"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toDoListView"

                android:cacheColorHint="@color/abc_search_url_text_holo"
                android:paddingLeft="@dimen/abc_action_bar_default_height"
                android:background="#7091ff"
                android:visibility="visible"
                android:clickable="true"
                android:textFilterEnabled="false"
                android:textAlignment="center"
                android:scrollingCache="false"
                android:divider="@drawable/abc_ab_transparent_dark_holo" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
